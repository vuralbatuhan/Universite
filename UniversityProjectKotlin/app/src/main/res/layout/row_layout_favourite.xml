<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_university_name_favourites"
        android:layout_width="273dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="@id/image_plus_favourites"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_plus_favourites"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/plus_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Favori Kalp Simgesi -->

    <ImageView
        android:id="@+id/image_heart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/empty_heart"
        app:layout_constraintBottom_toBottomOf="@+id/text_university_name_favourites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_university_name_favourites"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/university_details_favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_university_phone_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üniversite Telefonu"/>

        <TextView
            android:id="@+id/text_university_fax_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üniversite Fax No" />

        <TextView
            android:id="@+id/text_university_website_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üniversite Websitesi" />

        <TextView
            android:id="@+id/text_university_email_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üniversite Emaili" />

        <TextView
            android:id="@+id/text_university_address_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üniversite Adresi" />

        <TextView
            android:id="@+id/text_university_rector_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üniversite Rektörü" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
